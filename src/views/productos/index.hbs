              <div class="grid grid-cols-1 lg:grid-cols-1 gap-5 mt-5">
                <div class="card">

                    <div class="card-body">
                        <div class="flex flex-row justify-between items-center">
                            <h1 class="font-extrabold text-lg">Todos los productos</h1>
                            <a href="/productos/create" class="btn-gray text-sm"><i class="far fa-upload mr-2"></i>Subir Producto</a>
                        </div>

                        <table class="table-fixed w-full mt-5 text-right">

                            <thead>
                                <tr>
                                    <td class="py-4 w-2/5 font-extrabold text-sm text-left">Producto</td>
                                    <td class="py-4 w-1/6 font-extrabold text-sm">Descripcion</td>
                                    <td class="py-4 w-1/6 font-extrabold text-sm">Precio</td>
                                    <td class="py-4 w-1/6 font-extrabold text-sm">Inventario</td>
                                    <td class="py-4 w-1/12 font-extrabold text-sm">talla</td>
                                    <td class="py-4 w-1/12 font-extrabold text-sm px-2">Editar</td>
                                    <td class="py-4 w-1/12 font-extrabold text-sm px-2">Eliminar</td>
                                </tr>
                            </thead>
                            {{#each productos }}
                                  <tbody>

                                <!-- item -->
                                <tr class="">
                                
                                    <td class="py-4 w-2/5 text-sm text-gray-600 flex flex-row items-center text-left">
                                        <div class="w-8 h-8 overflow-hidden mr-3">
                                            <img src="/images/productos/{{imagen}}" class="object-cover">
                                        </div>
                                        {{nombre}}
                                    </td>
                                     <td class="py-4 w-2/5 text-xs text-gray-600"><span>{{Descripcion}}</span></td>
                                    <td class="py-4 w-1/6 text-xs text-gray-600">$ <span>{{precio}}</span></td>
                                    <td class="py-4 w-1/6 text-xs text-gray-600"><span>{{cantidad}}</span></td>
                                    <td class="py-4 w-1/12 text-xs text-gray-600"><span>{{talla}}</span></td>
                                    <td class="py-4 w-1/12">
                                    <a class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" href="/productos/edit/{{id}}"><i class="far fa-edit"></i></a></td>
                                    <td class="py-4 w-1/12">
                                    <a class="bg-transparent hover:bg-red-500 text-red-700 font-semibold hover:text-white py-2 px-4 border border-red-500 hover:border-transparent rounded" href="/productos/delete/{{id}}"><i class="fas fa-minus-circle"></i></a></td>
                                </tr>

                                <!-- end item -->
                            </tbody>
                           
                                
                            {{else}}
                                 <tbody>
                                     <tr>
                                     <td colspan="3"  class="py-4 w-2/5 text-xs text-gray-600">No hay productos existentes</td>
                                     </tr>
                                 </tbody>
                            
                            {{/each}}
                          

                        </table>

                    </div>
                </div>

            </div>